<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial1_V2.Views.DiscografiaPage"
             Title="Discografía">
    
    <StackLayout Padding="10">

        <Label Text="Álbumes de Rauw Alejandro"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <CollectionView x:Name="AlbumsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="100,*" Padding="5">
                        <Image Source="{Binding Cover}" HeightRequest="80"/>
                        <StackLayout Grid.Column="1">
                            <Label Text="{Binding Title}" FontAttributes="Bold"/>
                            <Label Text="{Binding Year}"/>
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>